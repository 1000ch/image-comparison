doctype html
html
  head
    meta(charset='utf-8')
    title image-comparision
    link(rel='stylesheet' href='//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css')
  body.container
    each filename in images
      div.row
        div.col-xs-6 [before] #{filename} #{beforeFileSize[filename]}
        div.col-xs-6 [after] #{filename} #{afterFileSize[filename]}
      div.row
        div.col-xs-6: img(src='/before/#{filename}', width='100%')
        div.col-xs-6: img(src='/after/#{filename}', width='100%')