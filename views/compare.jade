doctype html
html
  head
    meta(charset='utf-8')
    title image-comparision
    link(rel='stylesheet' href='//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css')
  body.container
    table.table.table-condensed.table-hover
      each filename in images
        thead
          tr
            th(colspan=2)
              h1 #{filename}
        tbody
          tr
            td
              h2
                span.label.label-primary Before #{beforeFileSize[filename]}
              img(src='/before/#{filename}')
            td
              h2
                span.label.label-success After #{afterFileSize[filename]}
              img(src='/after/#{filename}')